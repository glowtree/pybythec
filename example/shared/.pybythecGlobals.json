
{
  "defines": {
    "msvc": ["NOMINMAX", "VC_EXTRALEAN", "WIN32_LEAN_AND_MEAN"], // _WINSOCKAPI_ 
    "osx": "__APPLE__"
  },
  
  "flags": {
    "gcc": {
      "all": ["-Wall", "-Wno-deprecated", "-fno-gnu-keywords"], 
      "debug": "-g", 
      "release": "-O3"
    },
    "clang": {
      "all": ["-Wall", "-Wno-deprecated", "-fno-gnu-keywords"], 
      "debug": "-g", 
      "release": "-O3"
    },
    "msvc": {
      "all": ["/EHsc", "/Gy", "/nologo", "/errorReport:prompt"],
      "debug": ["/W1", "/RTC1", "/Z7"],
      "release": ["/DNDEBUG", "/O2", "/GL"],
      "dynamicLib": "/LD",
      "dynamic": "/LD"
    },
    "linux": {
      "staticLib": "-fPIC", 
      "dynamicLib": "-fPIC"
    },
    "osx": {
      "dynamicLib": "-fno-common", 
      "dynamic": "-fno-common"
      // "bundle": "-fno-common"
    }
  },                                                        
  
  "linkFlags": {
    "gcc": {
      "all": "-Wall", 
      "release": "-O3", 
      "dynamicLib": "-shared", 
      "dynamic": "-shared"
    },
    
    "clang": {
      "all": "-Wall", 
      "release": "-O3",
      "linux": {
        "dynamicLib": "-shared", 
        "dynamic": "-shared"
      },
      "osx": {
      "dynamicLib": "-dynamiclib", 
      "dynamic": "-bundle"
      }
    }, 

    "msvc": {
      "all": ["/NODEFAULTLIB:LIBCMT", "/NOLOGO", "/ERRORREPORT:PROMPT"], //:libc.lib -DYNAMICBASE -NXCOMPAT
      "debug": "/DEBUG",
      "release": ["/INCREMENTAL:NO", "/OPT:REF", "/OPT:ICF", "/LTCG"]
    }
  },
  
  "bins": {
    "msvc090": {
